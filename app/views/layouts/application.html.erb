<!DOCTYPE html>
<html>
<head>
  <title>Thoughtbox</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render partial: "shared/navbar" %>

<% flash.each do |type, message| %>
  <%= content_tag :div, message, class: "alert alert-#{type}" %>
<% end %>

<%= yield %>

</body>
</html>
