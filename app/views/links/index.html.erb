<% if current_user %>
<%= form_for(Link.new) do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title, placeholder: "Title" %>
  <%= f.label :link, "Link" %>
  <%= f.text_field :link, placeholder: "Link" %>
  <%= f.submit "GO!" %>
<% end %>
<% end %>

<div class="links">
  <% if @links %>
  <% @links.each do |link| %>
    <div class="link-#{link.id}">
      <%= link_to link.title, link.link %> - read:
      <% if link.read %>
        <%= content_tag :span, class: "link-read" do %>
        <% end %>
        -
        <%= link_to '#', class: "read", data: {id: link.id} do %>
          <%= content_tag :span %>
        <% end %>
      <% else %>
        <%= content_tag :span, class: "link-unread" do %>
        <% end %>
        -
        <%= link_to '#', class: "unread", data: {id: link.id} do %>
          <%= content_tag :span %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <% end %>
</div>
